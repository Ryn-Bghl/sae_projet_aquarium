{% extends 'base.html.twig' %}

{% block title %}Mes Poissons{% endblock %}

{% block body %}
    <div class="d-flex justify-between align-center mb-4">
        <h1>Mes Poissons</h1>
        <a href="{{ path('app_fish_new') }}" class="btn btn-primary">Ajouter un poisson</a>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Aquarium</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for fish in fish %}
                <tr>
                    <td>{{ fish.name }}</td>
                    <td>
                        {% if fish.aquarium %}
                            {{ fish.aquarium.name }}
                        {% else %}
                            <span class="text-muted">Non assigné</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_fish_show', {'id': fish.id}) }}" class="btn btn-secondary">Voir</a>
                        <a href="{{ path('app_fish_edit', {'id': fish.id}) }}" class="btn btn-secondary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucun poisson trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}