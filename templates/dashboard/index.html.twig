{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord - AquaTrack{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <div class="d-flex justify-between align-center mb-4">
            <h1>Tableau de Bord</h1>
            <a href="/data/new" class="btn btn-primary">
                + Nouvelle Mesure
            </a>
        </div>

        <!-- KPI Cards -->
        <div class="card-grid">
            <div class="card">
                <h3>Aquariums</h3>
                <div class="value">{{ aquariums|length }}</div>
                <div class="text-muted">Actifs</div>
            </div>
            <div class="card">
                <h3>Poissons</h3>
                <div class="value">{{ fishes|length }}</div>
                <div class="text-muted">Total</div>
            </div>
            <div class="card">
                <h3>Mesures</h3>
                <div class="value">{{ datas|length }}</div>
                <div class="text-muted">Enregistrées</div>
            </div>
        </div>

        <!-- Charts Section -->
        {% for aquarium in aquariums %}
            {% set tank_datas = datas|filter(d => d.aquarium.id == aquarium.id)|slice(0, 20)|reverse %} 
            
            {% if tank_datas|length > 0 %}
            <div class="card mb-4">
                <div class="d-flex justify-between align-center mb-4">
                    <h3 style="font-size: 1.25rem; color: var(--color-accent); margin-bottom: 0;">{{ aquarium.name }}</h3>
                    <span style="font-size: 0.9rem; color: var(--color-text-muted);">{{ aquarium.type }}</span>
                </div>
                
                <div class="card-grid" style="margin-bottom: 0; box-shadow: none; padding: 0; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));">
                    <div style="background: rgba(255,255,255,0.02); padding: 1.5rem; border-radius: 8px;">
                        <h4 style="margin-bottom: 15px; font-size: 1.1rem;">Température</h4>
                        <div 
                            data-controller="chart" 
                            data-chart-color-value="#ffb74d"
                            data-chart-data-value='{{ tank_datas|map(d => {date: d.createdAt|date("Y-m-d H:i:s"), value: d.temp})|json_encode }}'
                        >
                            <div data-chart-target="container" style="width: 100%; height: 350px;"></div>
                        </div>
                    </div>
                    <div style="background: rgba(255,255,255,0.02); padding: 1.5rem; border-radius: 8px;">
                        <h4 style="margin-bottom: 15px; font-size: 1.1rem;">pH</h4>
                        <div 
                            data-controller="chart" 
                            data-chart-color-value="#00bcd4"
                            data-chart-data-value='{{ tank_datas|map(d => {date: d.createdAt|date("Y-m-d H:i:s"), value: d.ph})|json_encode }}'
                        >
                            <div data-chart-target="container" style="width: 100%; height: 350px;"></div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        {% endfor %}

        <!-- Recent Activity Table -->
        <div class="card">
            <h3>Dernières Mesures</h3>
            <div class="table-container" style="box-shadow: none; padding: 0;">
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Aquarium</th>
                            <th>Temp (°C)</th>
                            <th>pH</th>
                            <th>NO2</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for data in datas|slice(0, 5) %}
                            <tr>
                                <td>{{ data.createdAt|date('d/m/Y H:i') }}</td>
                                <td>#{{ data.aquarium.id }}</td>
                                <td>{{ data.temp }}</td>
                                <td>{{ data.ph }}</td>
                                <td>{{ data.no2 }}</td>
                                <td>
                                    <a href="{{ path('app_data_show', {'id': data.id}) }}" class="btn btn-secondary" style="padding: 2px 8px; font-size: 0.8rem;">Voir</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}