{% extends 'base.html.twig' %}

{% block title %}Détails de la Mesure{% endblock %}

{% block body %}
    <div class="d-flex justify-between align-center mb-4">
        <h1>Mesure du {{ data.createdAt|date('d/m/Y H:i') }}</h1>
        <div class="gap-2 d-flex">
            <a href="{{ path('app_data_edit', {'id': data.id}) }}" class="btn btn-primary">Modifier</a>
            <a href="{{ path('app_data_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>

    <div class="card-grid">
        <div class="card">
            <h3>Paramètres Physiques</h3>
            <div class="value">{{ data.temp }}°C</div>
            <div class="text-muted">Température</div>
        </div>
        <div class="card">
            <h3>Acidité</h3>
            <div class="value">{{ data.ph }}</div>
            <div class="text-muted">pH</div>
        </div>
    </div>

    <div class="card mb-4">
        <h3>Détails Chimiques</h3>
        <div class="table-container" style="box-shadow: none; padding: 0;">
            <table>
                <tr>
                    <th>KH</th><td>{{ data.kh }} °d</td>
                    <th>GH</th><td>{{ data.gh }} °d</td>
                </tr>
                <tr>
                    <th>CL2</th><td>{{ data.cl2 }} mg/L</td>
                    <th>NO2</th><td>{{ data.no2 }} mg/L</td>
                </tr>
                <tr>
                    <th>NO3</th><td>{{ data.no3 }} mg/L</td>
                    <th>Aquarium</th><td>{{ data.aquarium.name }}</td>
                </tr>
            </table>
        </div>
    </div>

    {% if data.observation %}
    <div class="card">
        <h3>Observations</h3>
        <p>{{ data.observation }}</p>
    </div>
    {% endif %}
{% endblock %}