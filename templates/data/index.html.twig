{% extends 'base.html.twig' %}

{% block title %}Saisie de Données{% endblock %}

{% block body %}
    <div class="d-flex justify-between align-center mb-4">
        <h1>Historique des Mesures</h1>
        <a href="{{ path('app_data_new') }}" class="btn btn-primary">Nouvelle Mesure</a>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Aquarium</th>
                    <th>Temp (°C)</th>
                    <th>pH</th>
                    <th>KH</th>
                    <th>GH</th>
                    <th>NO2</th>
                    <th>NO3</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for datum in datas %}
                <tr>
                    <td>{{ datum.createdAt ? datum.createdAt|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ datum.aquarium ? datum.aquarium.name : 'N/A' }}</td>
                    <td>{{ datum.temp }}</td>
                    <td>{{ datum.ph }}</td>
                    <td>{{ datum.kh }}</td>
                    <td>{{ datum.gh }}</td>
                    <td>{{ datum.no2 }}</td>
                    <td>{{ datum.no3 }}</td>
                    <td>
                        <a href="{{ path('app_data_show', {'id': datum.id}) }}" class="btn btn-secondary">Voir</a>
                        <a href="{{ path('app_data_edit', {'id': datum.id}) }}" class="btn btn-secondary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center">Aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}