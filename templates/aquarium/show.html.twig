{% extends 'base.html.twig' %}

{% block title %}Aquarium : {{ aquarium.name }}{% endblock %}

{% block body %}
    <div class="d-flex justify-between align-center mb-4">
        <h1>{{ aquarium.name }}</h1>
        <div class="gap-2 d-flex">
            <a href="{{ path('app_aquarium_edit', {'id': aquarium.id}) }}" class="btn btn-primary">Modifier</a>
            <a href="{{ path('app_aquarium_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>

    <div class="card mb-4">
        <h3>Informations Générales</h3>
        <table class="table-borderless">
            <tr>
                <th>Capacité</th>
                <td>{{ aquarium.capacity }} Litres</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ aquarium.type }}</td>
            </tr>
        </table>
    </div>

    <div class="card">
        <h3>Poissons dans cet aquarium</h3>
        <div class="table-container" style="box-shadow: none; padding: 0;">
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for fish in aquarium.fishes %}
                    <tr>
                        <td>{{ fish.name }}</td>
                        <td>
                            <a href="{{ path('app_fish_show', {'id': fish.id}) }}" class="btn btn-secondary" style="padding: 2px 8px; font-size: 0.8rem;">Voir</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center">Aucun poisson dans cet aquarium.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
