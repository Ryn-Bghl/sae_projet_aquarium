{% extends 'base.html.twig' %}

{% block title %}Poisson : {{ fish.name }}{% endblock %}

{% block body %}
    <div class="d-flex justify-between align-center mb-4">
        <h1>{{ fish.name }}</h1>
        <div class="gap-2 d-flex">
            <a href="{{ path('app_fish_edit', {'id': fish.id}) }}" class="btn btn-primary">Modifier</a>
            <a href="{{ path('app_fish_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>

    <div class="card">
        <h3>Informations</h3>
        <table class="table-borderless">
            <tr>
                <th style="width: 200px;">Nom</th>
                <td>{{ fish.name }}</td>
            </tr>
            <tr>
                <th>Aquarium</th>
                <td>
                    {% if fish.aquarium %}
                        <a href="{{ path('app_aquarium_show', {'id': fish.aquarium.id}) }}">{{ fish.aquarium.name }}</a>
                    {% else %}
                        <span class="text-muted">Non assigné</span>
                    {% endif %}
                </td>
            </tr>
        </table>
    </div>
{% endblock %}