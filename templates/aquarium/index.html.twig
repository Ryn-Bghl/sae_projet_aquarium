{% extends 'base.html.twig' %}

{% block title %}Aquarium index{% endblock %}

{% block body %}
    <h1>Aquarium index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Capacity</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aquarium in aquaria %}
            <tr>
                <td>{{ aquarium.id }}</td>
                <td>{{ aquarium.name }}</td>
                <td>{{ aquarium.capacity }}</td>
                <td>{{ aquarium.type }}</td>
                <td>
                    <a href="{{ path('app_aquarium_show', {'id': aquarium.id}) }}">show</a>
                    <a href="{{ path('app_aquarium_edit', {'id': aquarium.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_aquarium_new') }}">Create new</a>
{% endblock %}
